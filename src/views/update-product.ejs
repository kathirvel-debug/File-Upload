<h1 class="mt-5 mb-4">update Product</h1>
<%if(errorMessage){%>
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <div>
         <%= errorMessage %>
        </div>
      </div>
<%}%>

<form action="/update-list" method="post" enctype="multipart/form-data">
    <input type="hidden" class="form-control" id="id" name="id" value="<%=updated.id%>">
    <div class="mb-3">
        <label for="name" class="form-label">Product Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%=updated.name%>">
    </div>
    <div class="mb-3">
        <label for="desc" class="form-label">Product Description</label>
        <textarea class="form-control" id="desc" name="desc" rows="3"><%=updated.desc%></textarea>
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" class="form-control" id="price" name="price" step="0.01" min="0" value="<%=updated.price%>">
    </div>
    <div class="mb-3">
        <label for="imageUrl" class="form-label">Image URL</label>
        <input type="file" class="form-control" id="imageUrl" name="imageUrl" >
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>